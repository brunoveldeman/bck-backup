#
#Seccion DAT
[dat]
name=Dat test
type=tape
sourcelist=/home/data/bck-backup/trunk,/home/data/bck-backup/stable
sourcelist=/etc/bck
excludelist=*.ext1,*.EXT1,*.ext2,*.EXT2
excludelist=*.tmp,*.TMP
dest=/var/temp/tar.test
maxsize=20000000000
eject=no
#
#Seccion Samba
#[samba]
#name = Copia en destino Samba
#type = samba
#sourcelist = /mydir,/mydir2
#excludelist = *.ext1,*.EXT1,*.ext2,*.EXT2
#dest = //sambaserver/sambashare
#maxsize = 20000000000
#user = username
#pass = userpassword
#histdirs=5
#
#Seccion de copia local
[local]
name=Local copy test
type=local
sourcelist=/home/data/bck-backup/trunk,/home/data/bck-backup/working
excludelist=*.ext1,*.EXT1,*.ext2,*.EXT2
dest=/var/temp
maxsize=10000000
histdirs=5

#
