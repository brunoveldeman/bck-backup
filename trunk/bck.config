#
#Seccion de copia de CD[RW] o DVD[RW], RW formatea el medio primero
[cdrw]
name=Copia en CD-RW
type=optical
dest=/dev/hdc
medium=CDRW
sourcelist=/home/data

#excludelist = *.ext1,*.EXT1,*.ext2,*.EXT2
#maxsize = 4500000000
#Seccion de copia de CD[RW] o DVD[RW], RW formatea el medio primero
[dvdrw]
name=Copia en DVD-RW
type=optical
dest=/dev/hdc
medium=DVDRW
sourcelist=/home/data
#excludelist = *.ext1,*.EXT1,*.ext2,*.EXT2
maxsize=4500000000

#Seccion de cipher
[cipher]
name=Localy cipher
type=cipher
sourcelist=/home/data
#excludelist = *.ext1,*.EXT1,*.ext2,*.EXT2
dest=/var/tmp/ciphered
maxsize=1000000000
