{
	my ( $self ) = shift;
	return( $self->{_statustext} );
};
sub GetSize
{
	my ( $self ) = shift;
	return( $self->{_size} );
};
sub GetDestSize
{
	my ( $self ) = shift;
	return( $self->{_destsize} );
};
sub GetDestFree
{
	my ( $self ) = shift;
	return( $self->{_destfree} );
};
