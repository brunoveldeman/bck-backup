	{
        	_text		=> $text,
		_lvl			=> $level,
    	};
	bless $self, $class;
	return $self;
};
#accessor method for reportline
sub Get
{
	my ( $self ) = shift;
	return ( $self->{_text}, $self->{_lvl} );
};
