package ParseOutput;
sub new
{
	my ($class) = shift;
	my $self =
	{
        	_cmd 	 => undef,
			_log		=> [],
			_errorlog => [],
        	_status   	=> 0,
    	};
	bless $self, $class;
	return $self;
};
